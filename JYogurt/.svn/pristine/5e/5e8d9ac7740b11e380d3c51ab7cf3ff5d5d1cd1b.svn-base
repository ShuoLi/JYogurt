package edu.jhu.cs.oose.fall2012.group1.jyogurt.utils;

import java.util.Locale;

import android.location.Address;

/**
 * Store the location info with latitude and longitude
 * 
 * @author Group 1
 * 
 */
public class Location extends Address {
	private String address;
	private Double longitude;
	private Double latitude;

	public Location(Locale locale) {
		super(locale);
		// TODO Auto-generated constructor stub
	}

	/**
	 * Get the latitude info
	 * 
	 * @return The Location info's latitude
	 */
	public double getLatitude() {
		return latitude;
	}

	/**
	 * Get the longitude info
	 * 
	 * @return The location info's longitude
	 */
	public double getLongitude() {
		return longitude;
	}

	/**
	 * Get the address info
	 * @return
	 */
	public String getAddress() {
		return address;
	}

	/**
	 * Set the address info
	 * @param address
	 */
	public void setAddress(String address) {
		this.address = address;
	}

}
